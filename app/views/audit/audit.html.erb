<% if !user_signed_in? %>
	<h1>KCM STSM Finances</h1><br>
	<p>
	  <%= render 'devise/sessions/new' %>
	</p>
<% else %>
	<% if @is_admin %>
		<h1>Audit</h1><br>
		<table class = "table table-striped table-bordered" style="width:60%" align="center" >
		<tr class ="info">
		  <td><strong>Name</strong></td>
		  <td><strong>Supporter First Name</strong></td>
		  <td><strong>Supporter Last Name</strong></td>
		  <td><strong>Amount</strong></td>
		  <td><strong>Check?</strong></td>
		  <td><strong>Check Number</strong></td>
		  <td><strong>Confirm</strong></td>
		</tr>
		<tr>
		  <%= form_tag audit_path do %>
			<td>
			<input list="participant_name" name="participant_name" autocomplete="off">
			<datalist id="participant_name">
			<% @participants.each do |p| %>
			  <option value="<%= p["first_name"] + " " + p["last_name"] + ", " + p["participant_id"] %>">
			<% end %>
			</datalist>
			</td>
			<td><%= text_field_tag(:donor_first_name, :value => @first_name) %></td>
			<td><%= text_field_tag(:donor_last_name, :value => @last_name) %></td>
			<td><%= text_field_tag(:donation_value, :value => @donation_value) %></td>
			<td><%= check_box_tag(:is_check, :value => @is_check) %></td>
			<td><%= text_field_tag(:check_number, :value => @check_number) %></td>
			<%= hidden_field_tag :auditor_initials, @auditor  %>
			<td><%= submit_tag("Submit") %></td>
		  <% end %>
		</tr>
		</table>
	<% end %>
<% end %>