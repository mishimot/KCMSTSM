<table class = "table table-striped table-bordered" style="width:80%">
    <tr class ="info">
      <td><strong>First Name</strong></td>
	  <td><strong>Last Name</strong></td>
	  <td><strong>Supporter Name</strong></td>
	  <td><strong>Amount</strong></td>
	  <td><strong>Check Number</strong></td>
	  <td><strong>Data Entry</strong></td>
	  <% if @is_admin %>
	  <td><strong>Audit</strong></td>
	  <td><strong>Audit Date</strong></td>
	  <td><strong>Edit</strong></td>
	  <td><strong>Delete</strong></td>
	  <% end %>
    </tr>
	<% if @donation_info != nil %>
		<% @donation_info.each do |d| %>
		  <tr>
			<td><%= d["first_name"].split.map(&:capitalize).join(' ') %></td>
			<td><%= d["last_name"].split.map(&:capitalize).join(' ') %></td>
			<td><%= d["d"]["first_name"] + " " + d["d"]["last_name"] %></td>
			<td><%= d["d"]["donation_value"] %></td>
			<td><%= d["d"]["check_number"] %></td>
			<td><%= d["d"]["recorder"] %></td>
			<% if @is_admin %>
			  <td><strong>Audit</strong></td>
			  <td><strong>Audit Date</strong></td>
			  <td><strong>Edit</strong></td>
			  <td><strong>Delete</strong></td>
			<% end %>
		  </tr>
		<% end %>
	<% end %>
</table>