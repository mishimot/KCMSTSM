<%= form_tag registered_path do %>
  <%= label_tag(:code, "Code:") %><div>
  <%= text_field_tag(:code) %><div>
  <%= label_tag(:first_name, "First Name:") %><div>
  <%= text_field_tag(:first_name) %><div>
  <%= label_tag(:last_name, "Last Name:") %><div>
  <%= text_field_tag(:last_name) %><div>
  <%= label_tag(:email, "Email:") %><div>
  <%= email_field_tag :email %><div>
  <%= label_tag(:password, "Password (No special characters!):") %><div>
  <%= password_field_tag(:password) %><div>
  <%= label_tag(:validate_password, "Reinput password:") %><div>
  <%= password_field_tag(:validate_password) %><div>
  <%= submit_tag("Submit") %><div>
<% end %>
